@page

@model web1_1.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Инвалидные коляски</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-success">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<div style="width: 1300px; overflow: auto; height: 500px;">
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Название
            </th>
            <th>
                Описание
            </th>
            <th>
                Цена
            </th>
            <th>
                Картинка
            </th>
            <th>
                Группа
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Wheelchair) {
            
            <tr>
                <td>
                    <img src="~/Images/@item.Image" alt="NoImage" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WheelchairName)
                </td>
                <td width="500">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.WheelchairGroupId)
                </td>
                <td>
                        <a asp-page="./Edit" asp-route-id="@item.WheelchairId" class="btn btn-outline-info">
                        <span class="fas fa-edit"></span></a>
                        @*<a asp-page="./Details" asp-route-id="@item.WheelchairId">Details</a> *@
                        <a asp-page="./Delete" asp-route-id="@item.WheelchairId" class="btn btn-outline-danger">
                        <span class="fas fa-trash-alt"></span></a>                                      
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
